    <div id="novedades" class="col-md-5 offset-md-1 scroll-section">
        <h2>novedades</h2>
        <ul class="lista-novedades">
            {{#each novedades}}
            <li>
                <a href="#" data-bs-toggle="modal" data-bs-target="#modal{{id}}">
                    <img src="/public/images/lobomarino.jpeg">{{titulo}}</a>

