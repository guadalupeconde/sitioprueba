<div class="modal fade" id="modal{{id}}" tabindex="-1" aria-labelledby="examplemodallabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="examplemodallabel"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
            </div>
            <div class="modal-body">
                <h4>{{subtitulo}}</h4>
                <p>{{cuerpo}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}


</section>

<!--visitanos y contacto-->

<div class="container text-center">
    <!--visitanos-->
    <div class="row row-cols-2">
        <section class="ubicacion" id="ubicacion">
            <div class="mapa">
                <h1>Visitanos</h1>
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3593.538758964779!2d-57.604188116574406!3d-37.86660645465398!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9584d7bbebd681fb%3A0x372e17f51bcd119d!2sCasa%20dimedonde!5e1!3m2!1ses!2sar!4v1696713322499!5m2!1ses!2sar"></iframe>
            </div>
        </section>
        <!--contacto-->
        <section class="formulariodecontacto" id="contacto">
            <div class="contacto">
                <h1>Contactanos</h1>
                <form class="row g-3" action="/" method="post">
                    <div class="col-md-6">
                        <h2>Nombre</h2>
                        <input type="text" class="form-control" id="nombre" name="nombre">
                    </div>
                    <div class="col-md-6">
                        <h2>Apellido</h2>
                        <input type="text" class="form-control" id="apellido" name="apellido">
                    </div>
                    <div class="col-12">
                        <h2>Email</h2>
                        <input type="email" class="form-control" id="email" placeholder="email@email.com" name="email">
                    </div>
                    <div class="col-12">
                        <h2>Celular</h2>
                        <input type="text" class="form-control" id="celular" placeholder="..." name="celular">
                    </div>
                    <div class="mb-3">
                        <h2>Comentarios</h2>
                        <textarea class="form-control" id="mensaje" rows="3" name="mensaje"></textarea>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
                <p>{{message}}</p>
            </div>
        </section>
    </div>
</div>