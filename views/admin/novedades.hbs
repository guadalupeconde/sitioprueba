<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col">
            <p style="float: right;">
                <span>hola {{usuario}}</span>
                <a href="/admin/login/logout" class="btn btn-danger">cerrar sesion <i class="fas fa-sing-out"
                        aria-hidden="true"></i></a>
            </p>
        </div>
    </div> {{!--fin fila 1--}}
    <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h3>listado de novedades</h3>
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"
                    aria-hidden="true"></i>nuevo</a>

        </div>
    </div> {{!--fin fila 2--}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">numero</th>
                <th scope="col">titulo</th>
                <th scope="col">subtitulo</th>
                <th scope="col">cuerpo</th>
                <th scope="col" class="text-rigth">acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each novedades}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td>{{subtitulo}}</td>
                <td>{{cuerpo}}</td>
                <td class="text-rigth">
                    <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i
                            class="fa fa-pencil"></i></a>
                    <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                            class="fas fa-trash"></i></a>

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>